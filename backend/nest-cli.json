{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "dtoFileNameSuffix": [".dto.ts", ".entity.ts"],
          "classValidatorShim": true,
          "introspectComments": true
      }}
    ],
    "assets": [
      {"include": "**/*.yaml"},
      {"include": "**/*.yml"},
      {"include": "public/**/*"}
    ]
  }
}
